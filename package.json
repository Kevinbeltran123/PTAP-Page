{
  "name": "ptap-la-pola-interactive",
  "version": "1.0.0",
  "description": "Interactive visualization of PTAP La Pola water treatment processes - Educational project for Environmental Engineering",
  "main": "index.html",
  "scripts": {
    "start": "npx serve . -p 3000",
    "dev": "npx live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli css/*.css -o dist/styles.min.css",
    "minify-js": "npx uglify-js js/**/*.js -o dist/scripts.min.js",
    "test": "npx lighthouse http://localhost:3000 --view",
    "validate": "npx html-validate index.html",
    "optimize": "npx imagemin assets/images/* --out-dir=assets/images/optimized",
    "deploy": "npm run build && npx gh-pages -d .",
    "lint": "npx eslint js/**/*.js",
    "format": "npx prettier --write \"**/*.{html,css,js,md}\"",
    "audit": "npm audit && npx lighthouse-ci --collect.numberOfRuns=3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-username/ptap-la-pola-interactive.git"
  },
  "keywords": [
    "water-treatment",
    "environmental-engineering",
    "interactive-visualization",
    "education",
    "ptap",
    "ibal",
    "ibague",
    "colombia",
    "water-quality",
    "academic-project"
  ],
  "author": {
    "name": "Kevin Beltrán",
    "email": "kevin.beltran@universidad.edu",
