  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "gh-pages": "^6.1.1",
    "html-validate": "^8.15.0",
    "imagemin-cli": "^7.0.0",
    "lighthouse": "^11.7.0",
    "lighthouse-ci": "^0.12.1",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "uglify-js": "^3.17.4"
  },
